<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_posisi_kiri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="36dp"
                android:src="@drawable/ic_baseline_adjust"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view"
                android:layout_width="100dp"
                android:layout_height="3dp"
                android:background="@drawable/blue_line"
                app:layout_constraintBottom_toBottomOf="@+id/iv_posisi_kiri"
                app:layout_constraintStart_toEndOf="@+id/iv_posisi_kiri"
                app:layout_constraintTop_toTopOf="@+id/iv_posisi_kiri" />

            <ImageView
                android:id="@+id/iv_posisi_tengah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_adjust"
                app:layout_constraintBottom_toBottomOf="@+id/view"
                app:layout_constraintStart_toEndOf="@+id/view"
                app:layout_constraintTop_toTopOf="@+id/view" />

            <View
                android:id="@+id/view2"
                android:layout_width="100dp"
                android:layout_height="3dp"
                android:background="@drawable/blue_line"
                app:layout_constraintBottom_toBottomOf="@+id/iv_posisi_tengah"
                app:layout_constraintStart_toEndOf="@+id/iv_posisi_tengah"
                app:layout_constraintTop_toTopOf="@+id/iv_posisi_tengah" />

            <ImageView
                android:id="@+id/iv_posisi_kanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_adjust"
                app:layout_constraintBottom_toBottomOf="@+id/view2"
                app:layout_constraintStart_toEndOf="@+id/view2"
                app:layout_constraintTop_toTopOf="@+id/view2" />


            <TextView
                android:id="@+id/tv_posisi_kiri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Data Customer"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/iv_posisi_kiri"
                app:layout_constraintStart_toStartOf="@+id/iv_posisi_kiri"
                app:layout_constraintTop_toBottomOf="@+id/iv_posisi_kiri" />

            <TextView
                android:id="@+id/tv_posisi_tengah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Data Barang"
                app:layout_constraintEnd_toEndOf="@+id/iv_posisi_tengah"
                app:layout_constraintStart_toStartOf="@+id/iv_posisi_tengah"
                app:layout_constraintTop_toBottomOf="@+id/iv_posisi_tengah" />

            <TextView
                android:id="@+id/tv_posisi_kanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Checkout"
                app:layout_constraintEnd_toEndOf="@+id/iv_posisi_kanan"
                app:layout_constraintStart_toStartOf="@+id/iv_posisi_kanan"
                app:layout_constraintTop_toBottomOf="@+id/iv_posisi_kanan" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>